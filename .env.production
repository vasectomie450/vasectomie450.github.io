# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application Environment
NODE_ENV=production
PORT=3001

# Domain Configuration
DOMAIN_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Google Places API
VITE_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
VITE_GOOGLE_PLACE_ID=your_google_place_id_here

# Security Configuration
# Generate a strong secret key for session management
SESSION_SECRET=your_very_long_random_session_secret_here

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://username:password@localhost:5432/vasectomy_clinic

# Email Configuration (if needed for contact forms)
# SMTP_HOST=smtp.your-email-provider.com
# SMTP_PORT=587
# SMTP_USER=your-email@your-domain.com
# SMTP_PASS=your-email-password

# Analytics (if needed)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Content Security Policy
CSP_REPORT_URI=/api/csp-report
